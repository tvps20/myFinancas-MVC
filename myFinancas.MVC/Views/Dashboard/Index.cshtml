@using myFinancas.MVC.Models.Domain
@{
    ViewBag.Title = "Dashboard";
    Dictionary<string, List<DividaModel>> dividas = ViewBag.Dividas;
    List<CompradorModel> pagantes = ViewBag.Pagantes;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-4 col-lg-12">
            <div class="card card-chart">
                <div class="card-header card-header-success">
                    <div class="ct-chart" id="dailySalesChart"></div>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Gastos</h4>
                    <p class="card-category">
                        <span class="text-success"><i class="fa fa-long-arrow-up"></i> 55% </span> Aumento dos
                        gastos de hoje.
                    </p>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="material-icons">access_time</i> Atualizado 4 minutos abr
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-12">
            <div class="card card-chart">
                <div class="card-header card-header-warning">
                    <div class="ct-chart" id="websiteViewsChart"></div>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Faturas</h4>
                    <p class="card-category">Histórico de Gastos</p>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="material-icons">access_time</i> Dados Aualizados há 2 dias abr
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-12">
            <div class="card card-chart">
                <div class="card-header card-header-danger">
                    <div class="ct-chart" id="completedTasksChart"></div>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Pagamentos</h4>
                    <p class="card-category">Últimos Pagamentos Recebidos</p>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="material-icons">access_time</i> Dados Aualizados há 2 dias abr
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Controle de Pagamentos</h4>
                    <p class="card-category">Lista de devedores e suas dívidas</p>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-hover">
                        <thead class="text-warning">
                            <tr>
                                <th>Nome</th>
                                <th>Valor</th>
                                <th>Pago</th>
                                <th>Restante</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(string key in dividas.Keys.OrderBy(x => x))
                            {
                                <tr>
                                    <td><a href="@Url.Action("Detalhes", "Comprador", new { id = dividas[key][0].IdComprador })">@key</a></td>
                                    <td>@dividas[key].Sum(x => x.ValorDivida)</td>
                                    <td>@dividas[key].Sum(x => x.ValorPago)</td>
                                    <td class="text-danger">
                                        <i class="fa fa-long-arrow-down"
                                           style="margin-right: 5px;"></i>R$ @dividas[key].Sum(x => x.ValorRestante)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <div class="card">
                <div class="card-header card-header-tabs card-header-warning">
                    <div class="nav-tabs-navigation">
                        <div class="nav-tabs-wrapper">
                            <ul class="nav nav-tabs" data-tabs="tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#profile" data-toggle="tab">
                                        <i class="material-icons">thumb_up</i> Pagantes
                                        <div class="ripple-container"></div>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#messages" data-toggle="tab">
                                        <i class="material-icons">thumb_down</i> Devedores
                                        <div class="ripple-container"></div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="profile">
                            <table class="table">
                                <tbody>
                                    @foreach (CompradorModel comprador in pagantes)
                                    {
                                        <tr>
                                            <td>@comprador.Nome</td>
                                            <td class="text-success">
                                                <i class="fa fa-long-arrow-up"
                                                   style="margin-right: 5px;"></i>Crédito de R$ @comprador.DividaTotalRestante
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane" id="messages">
                            <table class="table">
                                <tbody>                                   
                                    @foreach (string key in dividas.Keys)
                                    {
                                        <tr>
                                            <td>@key</td>
                                            <td>@dividas[key].Count dividas</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

