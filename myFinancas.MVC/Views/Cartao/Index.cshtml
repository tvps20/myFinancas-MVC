@model myFinancas.MVC.Models.Domain.CartaoModel
@using myFinancas.MVC.Models.Domain;
@using myFinancas.MVC.Models.Enuns;
@{
    ViewBag.Title = "Cartões";
    List<CartaoModel> Cartoes = ViewBag.Cartoes;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Novo Cartão</h4>
                    <p class="card-category">Criar um novo cartão</p>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Salvar", "Cartao", null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-md-6" style="margin-top: 12px;">
                                <div class="form-group" >
                                    @Html.LabelFor(model => model.Nome, new { Class = "bmd-label-floating" })
                                    @Html.TextBoxFor(model => model.Nome, new { Class = "form-control", required = true })
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <div class="form-group">
                                    <label for="inputState">Bandeira</label>
                                    <select id="inputState" name="Bandeira" class="form-control" style="background-color: #202940; color: #fff" required>
                                        <option selected>Choose...</option>
                                        <option value="Mastercard">@EnumExtensions.TipoPontoToDescriptionString(TipoBandeira.MASTERCARD)</option>
                                        <option value="Maestro">@EnumExtensions.TipoPontoToDescriptionString(TipoBandeira.MAESTRO)</option>
                                        <option value="Visa">@EnumExtensions.TipoPontoToDescriptionString(TipoBandeira.VISA)</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Adicionar</button>
                        <div class="clearfix"></div>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title ">Cartões</h4>
                            <p class="card-category">Lista de todos os cartões</p>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th>
                                                ID
                                            </th>
                                            <th>
                                                Nome
                                            </th>
                                            <th>
                                                Bandeira
                                            </th>
                                            <th class="text-center">
                                                Ação
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (CartaoModel Cartao in Cartoes)
                                        {
                                            <tr>
                                                <td>
                                                    @Cartao.Id
                                                </td>
                                                <td>
                                                    @Cartao.Nome
                                                </td>
                                                <td>
                                                    @Cartao.Bandeira
                                                </td>
                                                <td align="center" style="width:250px">
                                                    <button type="button" rel="tooltip" title="Editar"
                                                            class="btn btn-white btn-link btn-sm">
                                                        <i class="material-icons">edit</i>
                                                    </button>
                                                    <button type="button" rel="tooltip" title="Detalhes"
                                                            onclick="location.href='@Url.Action("Detalhes", "Cartao", new { id = Cartao.Id })'"
                                                            class="btn btn-white btn-link btn-sm">
                                                        <i class="material-icons">description</i>
                                                    </button>
                                                    <button type="button" rel="tooltip" title="Remover"
                                                            onclick="MensagemConfirma('Ateção', 'Deseja apagar o cartão @Cartao.Nome?', '@Url.Action("Remover", "Cartao", new { id = Cartao.Id })')"
                                                            class="btn btn-white btn-link btn-sm">
                                                        <i class="material-icons">close</i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>