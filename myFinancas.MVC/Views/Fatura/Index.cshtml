@model myFinancas.MVC.Models.Domain.FaturaModel
@using myFinancas.MVC.Models.Domain;
@using myFinancas.MVC.Models.Enuns;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<FaturaModel> Faturas = ViewBag.Faturas;
    List<CartaoModel> Cartoes = ViewBag.Cartoes;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Nova Fatura</h4>
                    <p class="card-category">Adicionar uma nova Fatura</p>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Salvar", "Fatura", null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DataVencimento)
                                    <input style="margin-top: 12px;" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="DataVencimento" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="inputState">Cartao</label>
                                    <select id="IdCartao" name="IdCartao" class="form-control input-sm" style="background-color: #202940; color: white" required>
                                        @foreach (CartaoModel Cartao in Cartoes)
                                        {
                                            <option value="@Cartao.Id"> @Cartao.Nome </option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        @Html.TextBox("IsFechada", true, new { Class = "form-check-input", Type = "checkbox" })
                                        Fatura Fechada
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                        <p>Não aceita novos lançamentos.</p>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        @Html.TextBox("IsPaga", true, new { Class = "form-check-input", Type = "checkbox" })
                                        Fatura Paga
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="bmd-label-floating">
                                        Observações
                                    </label>
                                    <textarea class="form-control" name="Observacao" rows="2"></textarea>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary pull-right">Adicionar</button>
                        <div class="clearfix"></div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title ">Faturas</h4>
                    <p class="card-category">Lista de todas as faturas</p>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th>
                                        Data de Vencimento
                                    </th>
                                    <th>
                                        Cartão
                                    </th>
                                    <th>
                                        Valor
                                    </th>
                                    <th class="text-center">
                                        Situação
                                    </th>
                                    <th class="text-center">
                                        Ação
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (FaturaModel Fatura in Faturas)
                                {
                                <tr>
                                    <td>
                                        @Fatura.DataVencimento.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        @Fatura.Cartao.Nome
                                    </td>
                                    <td>
                                        @Html.DisplayFor(fatura => Fatura.Valor)
                                    </td>
                                    <td class="text-center">
                                        @if (Fatura.IsFechada)
                                        {
                                            if (Fatura.IsPaga)
                                            {
                                                <button class="btn btn-default" style="width: 100px" disabled>Paga</button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-success"
                                                        onclick="MensagemConfirma('Ateção', 'Deseja pagar a fatura @Fatura.DataVencimento.ToString("dd/MM/yyyy")? Novos lançamentos não porderão ser adicionados a esta fatura.', '@Url.Action("PagarFatura", "Fatura", new { Id = Fatura.Id })')"
                                                        style="width: 100px">Pagar</button>
                                            }
                                        }
                                        else
                                        {
                                            <button class="btn btn-warning" 
                                                    onclick="MensagemConfirma('Ateção', 'Deseja fechar a fatura @Fatura.DataVencimento.ToString("dd/MM/yyyy")? As dividas serão geradas para cada comprador e não se poderar mais adicionar novos lancamentos.', '@Url.Action("FecharFatura", "Fatura", new { Id = Fatura.Id })')"
                                                    style="width: 100px">Fechar</button>
                                        }
                                    </td>
                                    <td align="center" style="width:250px">
                                        <button type="button" rel="tooltip" title="Editar"
                                                class="btn btn-white btn-link btn-sm">
                                            <i class="material-icons">@EnumExtensions.EnumToDescriptionString(TipoIcone.EDITAR)</i>
                                        </button>
                                        <button type="button" rel="tooltip" title="Detalhes"
                                                onclick="location.href='@Url.Action("Detalhes", "Fatura", new { id = Fatura.Id })'"
                                                class="btn btn-white btn-link btn-sm">
                                            <i class="material-icons">@EnumExtensions.EnumToDescriptionString(TipoIcone.DETALHES)</i>
                                        </button>
                                        <button type="button" rel="tooltip" title="Remover"
                                                onclick="MensagemConfirma('Ateção', 'Deseja remover a fatura @Fatura.DataVencimento.ToString("dd/MM/yyyy")?', '@Url.Action("Remover", "Fatura", new { Id = Fatura.Id })')"
                                                class="btn btn-white btn-link btn-sm">
                                            <i class="material-icons">@EnumExtensions.EnumToDescriptionString(TipoIcone.REMOVER)</i>
                                        </button>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

