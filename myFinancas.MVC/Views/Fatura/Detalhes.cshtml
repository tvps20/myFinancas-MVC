@model myFinancas.MVC.Models.Domain.LancamentoModel
@using myFinancas.MVC.Models.Domain;
@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    FaturaModel Fatura = ViewBag.Fatura;
    List<LancamentoModel> Lancamentos = ViewBag.Lancamentos;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
            <div class="card card-stats">
                <div class="card-header @(Fatura.IsPaga ? "card-header-success" : "card-header-danger" ) card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">monetization_on</i>
                    </div>
                    <p class="card-category">@(Fatura.IsPaga ? "Paga" : "Não Pagou")</p>
                    <h3 class="card-title">R$ @Fatura.Valor</h3>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="material-icons">access_time</i> Vencimento @Fatura.DataVencimento.ToString("dd/MM/yyyy")
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="card card-stats">
                <div class="card-header card-header-info card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">info</i>
                    </div>
                    <p class="card-category">Observação</p>
                    <p class="card-title">@(Fatura.Observacao != null ? Fatura.Observacao : "Sem Observações")</p>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="material-icons">local_offer</i>
                        <a href="#" class="info-link">Download da Fatura</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
            <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">payment</i>
                    </div>
                    <p class="card-category">Lançamentos</p>
                    <h3 class="card-title">@Lancamentos.Count</h3>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="material-icons">local_offer</i> Tracked from Github
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Novo Lançamento</h4>
                    <p class="card-category">Adicionar a fatura um novo Lançamento</p>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("SalvarLancamento", "Fatura", null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="row">
                            <input hidden class="form-control" value="@Fatura.Id" name="IdFatura" rows="2" />

                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DataCompra)
                                    <input style="margin-top: 12px;" type="date" name="DataCompra" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="inputState">Comprador</label>
                                    <select class="form-control input-sm" style="background-color: #202940; color: white">
                                        @foreach (LancamentoModel Cartao in Lancamentos)
                                        {
                                            <option value="@Cartao.Id"> @Cartao.Descricao </option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4" style="margin-top: 6px;">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Valor, new { Class = "bmd-label-floating" })
                                    @Html.TextBoxFor(model => model.Valor, new { Class = "form-control money", required = true })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="bmd-label-floating">
                                        Descrição
                                    </label>
                                    <textarea class="form-control" name="Descricao" rows="1" required></textarea>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        @Html.TextBox("IsParcelado", true, new { Class = "form-check-input", Type = "checkbox" })
                                        Compra Parcelada
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="bmd-label-floating">
                                        Numero de Parcelas
                                    </label>
                                    <input class="form-control" type="number" name="QtdParcelas" rows="1"></input>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="bmd-label-floating">
                                        Observações
                                    </label>
                                    <textarea class="form-control" name="Observacao" rows="1"></textarea>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary pull-right">Adicionar</button>
                        <div class="clearfix"></div>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title ">Lançamentos</h4>
                            <p class="card-category">Lista de todos os Lançamentos</p>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th>
                                                Descrição
                                            </th>
                                            <th>
                                                Valor
                                            </th>
                                            <th>
                                                Parcela
                                            </th>
                                            <th class="text-center">
                                                Ação
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (LancamentoModel Lancamento in Lancamentos)
                                        {
                                            <tr>
                                                <td>
                                                    @Lancamento.Descricao
                                                </td>
                                                <td>
                                                    @Lancamento.Valor
                                                </td>
                                                <td>
                                                    @(Lancamento.IsParcelado ? Lancamento.ParcelaAtual + "/" + Lancamento.QtdParcelas : "-")
                                                </td>
                                                <td align="center" style="width:250px">
                                                    <button type="button" rel="tooltip" title="Editar"
                                                            class="btn btn-white btn-link btn-sm">
                                                        <i class="material-icons">edit</i>
                                                    </button>
                                                    <button type="button" rel="tooltip" title="Detalhes"
                                                            onclick="mostrarModal(@Lancamento.Id)"
                                                            @*data-toggle="modal" data-target="#exampleModal"*@
                                                            class="btn btn-white btn-link btn-sm">
                                                        <i class="material-icons">description</i>
                                                    </button>
                                                    <button type="button" rel="tooltip" title="Remover"
                                                            onclick="MensagemConfirma('Ateção', 'Deseja apagar o Lançamento @Lancamento.Valor?', '@Url.Action("RemoverLancamento", "Fatura", new { Id = Lancamento.Id, IdFatura = Lancamento.Id })')"
                                                            class="btn btn-white btn-link btn-sm">
                                                        <i class="material-icons">close</i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modalDetalhes"></div>

@section Scripts {
    <script type="text/javascript">
    function mostrarModal(Id) {
            Id = "/" + Id;
            $(document).ready(function () {
                $.ajax({
                type: "GET",
                    traditional: true,
                    url: '@Url.Action("Detalhes", "Lancamento")'.concat(Id),
                success: function (data) {
                    document.getElementById('modalDetalhes').innerHTML = data;
                    $('#exampleModal').modal('show');
                },
                error: function () {
                    alert("Erro na tentativa de emissão!");
                }
            });
        })
    }
    </script>
}